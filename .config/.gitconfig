[user]
	name = Philipp Hanemann
	email = p.hanemann@enbw.com

[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
[init]
	defaultBranch = main

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections

    # delta detects terminal colors automatically; set one of these to disable auto-detection
    #dark = true
    #light = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

